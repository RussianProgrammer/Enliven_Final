<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/marker_moderation_slot_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#616161"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/marker_moderation_slot_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/description"
            android:foregroundGravity="left"
            android:padding="7dp"
            app:srcCompat="@drawable/marker_moderation_empty_slot_icon" />

        <TextView
            android:id="@+id/marker_moderation_slot_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/marker_moderation_slot_icon"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:text="Пусто"
            android:textColor="#FFFFFF"
            android:textSize="33sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/marker_moderation_slot_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marker_moderation_slot_status"
            android:layout_toRightOf="@id/marker_moderation_slot_icon"
            android:paddingLeft="5dp"
            android:text="Проверка содержания…"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>